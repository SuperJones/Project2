<div class="row">
  <div class="col-md-12 duelTitle">
    <h2>Time to Duel!!</h2>
  </div>
</div>

<div class="row battle">
  <!-- TODO: track wins -->
  <div class="col-md-3 currentUser">
    <%= image_tag @current_user.photo_url%>
    <p id="currUsername"><%= @current_user.username %></p>
    <p>
      HP: <span id="currhp"><%= @current_user.health_points%></span>
    </p>
    <h5>ATTACK</h5>
    <p>Weapon Attack:
      <span id="currWeaponAtt">
        <%= @currweapon.attack_points%>
      </span>
    </p>
    <h5>DEFENSE</h5>
  </div>

  <div id="middleInfo" class="col-md-6">
    <div id="currweapon" class="col-md-3">
      <%= image_tag @currweapon.photo_url%>
    </div>
    <div class="col-md-6">
      <h4>Details of Fight</h4>
      <p class="fightStatus"></p>
    </div>
    <div id="oppweapon" class="col-md-3">
      <%= image_tag @oppweapon.photo_url%>
    </div>
  </div>

  <div class="col-md-3 opponentUser">
    <%= image_tag @opponent.photo_url%>
    <p id="oppUsername"><%= @opponent.username %></p>
    <p>
      HP: <span id="opphp"><%= @opponent.health_points%></span>
    </p>
    <h5>ATTACK</h5>
    <p>Weapon Attack:
      <span id="oppWeaponAtt">
        <%= @oppweapon.attack_points%>
      </span>
    </p>
    <h5>DEFENSE</h5>
  </div>
</div>
