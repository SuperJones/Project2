

<!-- FIXME: How do I make this page show, in the "Stuff over Here" column -->
<div class='container-fluid'>
    <div class='row'>
        <div class='col-sm-3 col-xs-5 profile sidebar'>

                <%= image_tag @user.photo_url, size: "200x200"%>
                <h3><%= @user.username%></h3>
                <p><%=link_to "Edit Profile", edit_user_path(@user)%></p>
                <p>Steps: <%= @user.steps%></p>

            <div class="input-group">
                <input type="search" name="usersearch" placeholder="Enter a Username" class="form-control" >
                <span class="input-group-addon" id="basic-addon1">Search</span>
            </div>

        </div class="search">
        <div class='col-sm-6 col-sm-offset-1 col-xs-5 chunk inventory'>
            <h2>Inventory</h2>
            <table class="table">
                <% @user.items.each do |item|%>
                    <tr>
                        <td rowspan="2">
                            <%= image_tag "#{item.weapon_kind}.png"%></td>
                        <td><%= item.weapon_kind%></td>
                        <td><%= item.hp%></td>
                    </tr>
                <% end%>
            </table>
        </div>
    </div>
</div>
