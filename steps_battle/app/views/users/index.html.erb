<h1>Steps Battle</h1>

<h2>Leader Board</h2>

<table>
    <tr>
        <th>Rank</th>
        <th>Username</th>
        <th>Steps</th>
    </tr>
    <%count = 0%>
    <% @users.sort_by{|u| u.steps}.reverse.each do |u| %>
        <% if count < 3%>
            <tr>
                <td><%= count += 1 %></td>
                <td><%= link_to u.username, user_path(u) %></td>
                <td><%= u.steps %></td>
            </tr>
        <% end %>
    <% end %>
</table>
